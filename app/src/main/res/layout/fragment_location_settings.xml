<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="ua.in.quireg.sunshine_mine.ui.FragmentLocationSettings">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textFilter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/location_settings_search_text"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:hint="Type your city here" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_settings_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/location_settings_search_text" />

</RelativeLayout>
